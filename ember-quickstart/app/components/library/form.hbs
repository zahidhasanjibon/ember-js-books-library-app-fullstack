<div class='container'>
  {{#if @formData.isAlertShow}}
    <div class='alert alert-primary' role='alert'>
      {{@formData.isAlertShow}}
    </div>
  {{/if}}

  <div class='row mt-4'>
    <div class='col-md-6'>
      <div id='ember126' class='ember-view'><div class='form-horizontal'>
          <div class='form-group has-feedback'>
            <label class='col-sm-2 control-label'>Name*</label>

            <div class='col-sm-10'>
              <Input
                @value={{@formData.name}}
                placeholder='The name of the Library'
                id='ember127'
                class='ember-text-field ember-view form-control'
                type='text'
              />

            </div>
          </div>
          <div class='form-group'>
            <label class='col-sm-2 control-label'>Address</label>
            <div class='col-sm-10'>
              <Input
                @value={{@formData.address}}
                placeholder='The address of the Library'
                id='ember128'
                class='ember-text-field ember-view form-control'
                type='text'
              />
            </div>
          </div>
          <div class='form-group'>
            <label class='col-sm-2 control-label'>Phone</label>
            <div class='col-sm-10'>
              <Input
                @value={{@formData.phone}}
                placeholder='The phone number of the Library'
                id='ember129'
                class='ember-text-field ember-view form-control'
                type='text'
              />
            </div>
          </div>
          <div class='form-group'>
            <div class='col-sm-offset-2 col-sm-10'>
              {{#if @formData.createLibrary}}
                <button
                  {{on 'click' @formData.createLibrary}}
                  class='btn btn-primary'
                  type='submit'
                >Create</button>

              {{/if}}
            </div>
          </div>
        </div></div>
    </div>
    <div class='col-md-4'>
      <div class='card h-100'>
        <div class='card-header'>
          {{@formData.name}}
        </div>
        <div class='card-body'>
          <p class='card-text'>Address: {{@formData.address}} </p>
          <p class='card-text'>Phone: {{@formData.phone}}</p>
        </div>
        <div class='card-footer'>
          Number of books:
          <span class='text-left badge'>
            0
          </span>
          <span class='pull-right'>

            <br />

          </span>
        </div>
      </div>

    </div>
  </div>

</div>