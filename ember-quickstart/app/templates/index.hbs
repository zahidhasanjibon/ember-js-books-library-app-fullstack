{{page-title 'Index'}}
<div class='jumbotron text-center'>
  <h1>Coming Soon</h1>

  <br /><br />

  <p>Don't miss our launch date, request an invitation now.</p>

  <div
    class='form-horizontal form-group form-group-lg row justify-content-center'
  >
    <div
      class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2'
    >
      <Input
        {{on 'input' this.checkEmailValidation}}
        @value={{this.emailValue}}
        type='email'
        class='form-control'
        placeholder='Please type your e-mail address.'
        autofocus='autofocus'
      />
      <p>{{this.emailValue}}</p>
    </div>
    <div class='col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3'>
      <button
        {{on 'click' this.postEmailForInvite}}
        disabled={{this.isBtnDisabled}}
        class='btn btn-primary btn-lg btn-block'
        type='button'
      >Request invitation</button>
    </div>
  </div>

  {{#if this.isAlertShow}}
    <div class='alert alert-primary' role='alert'>
      {{this.isAlertShow}}
    </div>
  {{/if}}

  <br /><br />
</div>