{{page-title 'Contact'}}
<div class='container'>
  <h1 class='mt-4'>Contact Page</h1>

  <div class='mt-3'>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group has-feedback'>
          <label>Your email address*:</label>
          <Input
            @value={{this.emailAddress}}
            {{on 'input' this.checkEmailValidation}}
            placeholder='Your email address'
            autofocus=''
            id='ember26'
            class='ember-text-field ember-view form-control'
            type='email'
          />

        </div>
        <div class='form-group has-feedback'>
          <label>Your message*:</label>
          <Textarea
            @value={{this.message}}
            rows='5'
            placeholder='Your message. (At least 5 characters.)'
            id='ember27'
            class='ember-text-area ember-view form-control'
          />

        </div>
        <button
          {{on 'click' this.submitMessage}}
          disabled={{this.isBtnDisabled}}
          class='btn btn-success'
          type='button'
          class='btn btn-primary'
          data-toggle='modal'
          data-target='#exampleModal'
        >
          Send
        </button>
        {{#if this.isAlertShow}}
          <div class='mt-4'>
            <div class='alert alert-primary' role='alert'>
              {{this.isAlertShow}}
            </div>
          </div>
        {{/if}}

        <!-- Button trigger modal -->
        {{! <button
          type='button'
          class='btn btn-primary'
          data-toggle='modal'
          data-target='#exampleModal'
        >
          Launch demo modal
        </button> }}

      </div>
    </div>
  </div>

  <!-- Modal -->
  {{#if this.isModalShow}}
    <div
      class='modal fade'
      id='exampleModal'
      tabindex='-1'
      role='dialog'
      aria-labelledby='exampleModalLabel'
      aria-hidden='true'
    >
      <div class='modal-dialog' role='document'>
        <div class='modal-content'>
          <div class='modal-header'>
            <h5 class='modal-title' id='exampleModalLabel'>thank you! your
              message is sent</h5>
            <button
              {{on 'click' this.clearForm}}
              type='button'
              class='close'
              data-dismiss='modal'
              aria-label='Close'
            >
              <span aria-hidden='true'>&times;</span>
            </button>
          </div>
          <div class='modal-body'>
            <h6>Email :{{this.emailAddress}} </h6>
            <h6>Message : {{this.message}}</h6>
          </div>
          <div class='modal-footer'>
            <button
              {{on 'click' this.clearForm}}
              type='button'
              class='btn btn-secondary'
              data-dismiss='modal'
            >Close</button>

          </div>
        </div>
      </div>
    </div>
  {{/if}}

</div>